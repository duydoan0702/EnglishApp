<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#64B5F6"  android:endColor="#1E88E5"    android:angle="45"
                android:type="linear" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <item android:left="-60dp" android:top="-60dp">
        <shape android:shape="oval">
            <size android:width="180dp" android:height="180dp" />
            <gradient
                android:startColor="#BBDEFB"  android:endColor="#64B5F6"    android:type="radial"
                android:gradientRadius="90dp" />
        </shape>
    </item>

    <item android:right="-90dp" android:bottom="-90dp">
        <shape android:shape="oval">
            <size android:width="240dp" android:height="240dp" />
            <gradient
                android:startColor="#E3F2FD"  android:endColor="#1E88E5"    android:type="radial"
                android:gradientRadius="120dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:color="#0D47A1" android:width="2dp" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</layer-list>