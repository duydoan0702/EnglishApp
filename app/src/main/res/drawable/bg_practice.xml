<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#3498db"  android:endColor="#2980b9"    android:angle="135"
                android:type="linear"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <item android:left="-100dp" android:top="-100dp">
        <shape android:shape="oval">
            <size android:width="300dp" android:height="300dp"/>
            <gradient
                android:startColor="#87CEEB"  android:endColor="#3498db"    android:type="radial"
                android:gradientRadius="150dp"/>
        </shape>
    </item>

    <item android:right="-150dp" android:bottom="-150dp">
        <shape android:shape="oval">
            <size android:width="400dp" android:height="400dp"/>
            <gradient
                android:startColor="#E0FFFF"  android:endColor="#2980b9"    android:type="radial"
                android:gradientRadius="200dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:color="#2c3e50"  android:width="2dp"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

</layer-list>