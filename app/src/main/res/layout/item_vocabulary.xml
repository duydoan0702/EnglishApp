<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Tiếng Anh -->
    <TextView
        android:id="@+id/textViewEnglish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="English Word"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <!-- Phiên âm -->
    <TextView
        android:id="@+id/textViewPhonetic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Phonetic"
        android:textSize="16sp"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewEnglish"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Tiếng Việt -->
    <TextView
        android:id="@+id/textViewVietnamese"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewPhonetic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Vietnamese Meaning"
        android:textColor="@color/black"
        android:textSize="16sp" />
</androidx.constraintlayout.widget.ConstraintLayout>
